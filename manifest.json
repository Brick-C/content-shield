{
  "manifest_version": 3,
  "name": "Content Guardian",
  "version": "1.0",
  "description": "Automatically hide, blur, or flag unwanted content based on your keywords across all websites.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Content Guardian"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
